
---- 1 

SELECT 
Nome,
Ano
FROM Filmes;

----- 2

SELECT Nome, Ano,Duracao
FROM Filmes
ORDER BY Ano;

------ 3
SELECT Nome,ano, Duracao 
FROM Filmes 
WHERE Nome = 'De volta para o futuro';

------ 4

SELECT Nome, ano, Duracao
From Filmes
WHERE Ano = 1997;

-------- 5 

SELECT Nome, Ano, duracao
From Filmes
WHERE Ano > 2000;

-------- 6 

SELECT Nome, Ano, duracao
From filmes
WHERE Duracao BETWEEN 101 AND 150
Order By Duracao;

--------- 7 
SELECT Ano, COUNT(*) AS Quantidade_Filmes
FROM Filmes
GROUP BY Ano
ORDER BY Quantidade_Filmes DESC;

-------- 8 

SELECT Id, PrimeiroNome, UltimoNome, Genero
FROM Atores
WHERE Genero = 'M';

------------ 9

SELECT Id, PrimeiroNome, UltimoNome, Genero
From Atores
WHERE Genero = 'F'
ORDER BY PrimeiroNome ASC;


----------- 10 

SELECT DISTINCT Nome, Generos  
FROM Filmes;


------------ 11

SELECT Nome
FROM Filmes
WHERE Generos LIKE '%Mist√©rio%';


------------- 12   


SELECT 
    f.Nome AS Filme, 
    a.PrimeiroNome, 
    a.UltimoNome, 
    Papel
FROM Filmes f
JOIN ElencoFilme el ON f.ID = el.IDFilme
JOIN Atores a ON el.IdAtor = a.ID;
